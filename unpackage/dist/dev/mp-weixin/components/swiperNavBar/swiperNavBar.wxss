
.swiperHead scroll-view{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-flex-wrap: nowrap;
	        flex-wrap: nowrap;
	white-space: nowrap;
	background-color: #FFFFFF;
}
.swiperTab{
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: inline-flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	text-align: center;
	position: relative;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: 100%;
	background-color: #FFFFFF;
}
.swiperLine{ position: absolute;bottom: 10rpx;left: 0;width: 100%;z-index: 10;
}
.swiperLineActive{ margin: 0 auto;-webkit-border-radius: 30rpx;border-radius: 30rpx;
}
@-webkit-keyframes currentLine{
0%{
		-webkit-transform: scale(0.5);
		        transform: scale(0.5);
}
100%{
		-webkit-transform: scale(1);
		        transform: scale(1);
}
}
@keyframes currentLine{
0%{
		-webkit-transform: scale(0.5);
		        transform: scale(0.5);
}
100%{
		-webkit-transform: scale(1);
		        transform: scale(1);
}
}
.currentLine{ -webkit-animation:currentLine 300ms forwards; animation:currentLine 300ms forwards;
}
.text {
	width: 90rpx;
	font-weight: bold;
}

